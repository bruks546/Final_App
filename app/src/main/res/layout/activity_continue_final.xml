<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView51"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView51"
            android:text="@string/hear_about"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/hear_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView52"
            android:layout_alignStart="@+id/textView52"
            android:layout_below="@+id/textView43"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hear_text"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="@string/self_sufficient"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView51"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/radioGroup6">

            <RadioButton
                android:id="@+id/self_yes"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="@string/yes_radio" />

            <RadioButton
                android:id="@+id/self_no"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/no_radio" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView51"
            android:layout_alignStart="@+id/textView51"
            android:layout_below="@+id/radioGroup6"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            android:text="@string/abide_lease"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView52"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroup7">

            <RadioButton
                android:id="@+id/abide_yes"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="@string/yes_radio" />

            <RadioButton
                android:id="@+id/abide_no"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="@string/no_radio" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="@string/agree_str"
            android:textAlignment="gravity"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView53"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/radioGroup8">

            <RadioButton
                android:id="@+id/agree_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes_radio" />

            <RadioButton
                android:id="@+id/agree_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no_radio" />
        </RadioGroup>

        <Button
            android:id="@+id/Submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup8"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ContinueAppDone"
            android:text="@string/submit_btn_str" />

  </LinearLayout>
</ScrollView>