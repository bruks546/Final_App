<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/application_D"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="15dp"
            android:text="@string/income_pr"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView30"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="@string/d_family_me" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView32"
            android:layout_alignStart="@+id/textView32"
            android:layout_below="@+id/textView32"
            android:layout_marginTop="15dp"
            android:text="1." />

        <EditText
            android:id="@+id/income_family_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView33"
            android:layout_alignStart="@+id/textView33"
            android:layout_below="@+id/textView33"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/full_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/income_source_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/income_family_1"
            android:layout_alignStart="@+id/income_family_1"
            android:layout_below="@+id/income_family_1"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/income_source"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/amount_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/income_source_1"
            android:layout_alignBottom="@+id/income_source_1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/textView29"
            android:layout_toRightOf="@+id/textView29"
            android:ems="10"
            android:hint="@string/gross_income"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/income_source_1"
            android:layout_alignStart="@+id/income_source_1"
            android:layout_below="@+id/income_source_1"
            android:layout_marginTop="17dp"
            android:text="2." />

        <EditText
            android:id="@+id/income_family_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView36"
            android:layout_alignStart="@+id/textView36"
            android:layout_below="@+id/textView36"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="@string/full_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/income_source_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/income_family_2"
            android:layout_alignStart="@+id/income_family_2"
            android:layout_below="@+id/income_family_2"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/income_source"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/amount_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/income_source_2"
            android:layout_alignBottom="@+id/income_source_2"
            android:layout_alignLeft="@+id/amount_1"
            android:layout_alignStart="@+id/amount_1"
            android:ems="10"
            android:hint="@string/gross_income"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/income_source_2"
            android:layout_alignStart="@+id/income_source_2"
            android:layout_below="@+id/income_source_2"
            android:layout_marginTop="17dp"
            android:text="3." />

        <EditText
            android:id="@+id/income_family_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView42"
            android:layout_alignStart="@+id/textView42"
            android:layout_below="@+id/textView42"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/full_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/income_source_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/income_family_3"
            android:layout_alignStart="@+id/income_family_3"
            android:layout_below="@+id/income_family_3"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="@string/income_source"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/amount_3"
            android:layout_alignRight="@+id/amount_3"
            android:layout_alignTop="@+id/income_source_3"
            android:ems="10"
            android:hint="@string/gross_income"
            android:inputType="number" />

        <Button
            android:id="@+id/continue_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/income_source_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:onClick="ContinueEBtn"
            android:text="@string/continue_btn" />

    </RelativeLayout>
</ScrollView>